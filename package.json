{
  "name": "reactscratch",
  "version": "1.0.0",
  "description": "Awesome React Starter Kit that can scale for an enterprise application with the very easy maintainable codebase.",
  "main": "index.jsx",
  "scripts": {
    "test": "jest",
    "start-dev": "better-npm-run start-dev",
    "build-dev": "better-npm-run build-dev",
    "build-prod": "better-npm-run build-prod",
    "build-analyze": "better-npm-run build-dev-analyze",
    "eslint": "eslint --config ./.eslintrc --ext .js,jsx ./src --fix",
    "storybook": "start-storybook"
  },
  "betterScripts": {
    "build-dev": {
      "command": "webpack --progress --config ./webpack.config.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "build-dev-analyze": {
      "command": "webpack -w --progress --config ./webpack.config.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000,
        "analyze": true
      }
    },
    "build-prod": {
      "command": "webpack --progress --config ./webpack.config.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "webpack-dev-server"
    }
  },
  "keywords": [
    "react",
    "javascript",
    "webpack",
    "babel",
    "jsx",
    "html",
    "css",
    "tailwind",
    "server side rendering",
    "eslint",
    "storybook",
    "redux",
    "saga"
  ],
  "author": "Anand (@aanandgupta193) & Shubham (@shubhamsWEB)",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@storybook/react": "^5.3.19",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "webpack-cli": "^3.3.12",
    "redux-devtools-extension": "^2.13.8",
    "autoprefixer": "^9.8.5"
  },
  "devDependencies": {
    "@americanexpress/purgecss-loader": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "better-npm-run": "^0.1.1",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.3.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.1",
    "eslint-plugin-react-hooks": "^4.0.4",
    "extract-css-chunks-webpack-plugin": "^4.7.5",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build-prod"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "npm run eslint"
  }
}
