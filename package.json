{
  "name": "reactscratch",
  "version": "1.0.0",
  "description": "",
  "main": "index.jsx",
  "scripts": {
    "test": "jest",
    "start-dev": "npm run eslint && better-npm-run build-dev && better-npm-run start-dev",
    "build-dev": "better-npm-run build-dev",
    "eslint": "eslint --config ./.eslintrc --ext .js,jsx ./src --fix",
    "storybook": "start-storybook",
    "lint-staged": "lint-staged"
  },
  "betterScripts": {
    "build-dev": {
      "command": "webpack -d --progress --config ./webpack.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start-dev": {
      "command": "nodemon --exec babel-node src/server/server.js --ignore dist/",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    }
  },
  "keywords": [
    "react",
    "javascript",
    "webpack",
    "babel",
    "jsx",
    "html",
    "css",
    "tailwind",
    "server side rendering",
    "eslint",
    "storybook",
    "redux",
    "saga"
  ],
  "author": "Anand (@aanandgupta193) & Shubham (@shubhamsWEB)",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-loader": "^8.1.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.1.3",
    "redux-thunk": "^2.3.0",
    "webpack": "^4.43.0",
    "@storybook/react": "^5.3.19",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "better-npm-run": "^0.1.1",
    "eslint": "^7.3.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.1",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "react-test-renderer": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run eslint"
    ]
  }
}
